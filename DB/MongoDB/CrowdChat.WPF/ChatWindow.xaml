<Window x:Class="CrowdChat.WPF.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindow" Height="300" Width="300">
    <Grid>
        <ListBox
            Name="ChatMessages"
            HorizontalAlignment="Left" 
            Height="241" 
            Margin="10,10,0,0" 
            VerticalAlignment="Top" 
            Width="123"/>
        <Button 
            Click="PostMessage"
            Content="Post" 
            HorizontalAlignment="Left"
            Margin="211,135,0,0"
            VerticalAlignment="Top" 
            Width="75"/>
        <TextBox 
            Name="UserMessage"
            HorizontalAlignment="Left" 
            Height="23" 
            Margin="166,107,0,0" 
            TextWrapping="Wrap" 
            Text="Message" 
            VerticalAlignment="Top" 
            Width="120"/>

    </Grid>
</Window>
